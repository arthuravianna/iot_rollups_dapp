                        <th scope="col">Fine Value (R$)</th>
                    </tr>
                </thead>
                
                <!-- Notices -->
                <tbody id="finesTableBody">
                </tbody>
            </table>
    
            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul id="paginationList" class="pagination justify-content-center">
                </ul>
            </nav>
        </div>
    </div>

